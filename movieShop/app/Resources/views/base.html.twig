<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Movie shop {% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
</head>
<body>
<div class="search-bar">
    <form method="GET" action="" class="js-sea-search sea-search">
        <input type="search" name="q" placeholder="Recherche" autocomplete="off" class="search-input">
    </form>
</div>
<header class="header">
    <img class="logo-icon" src="{{ asset('images/logo.png') }}">
    <h1 class="logo"><a href="{{ path('home') }}">Movie Shop</a></h1>
    <ul class="navi">
        <li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li>
        <li><a href="{{ path('shop') }}">Shop(AVC)</a></li>
        <li><a href="{{ path('security_login') }}">Gestion compte(VC)</a></li>
        <li><a href="{{ path('security_login') }}">gestion BDD(AV)</a></li>
        <li><a href="{{ path('security_login') }}">Param√®tres(VC)</a></li>
        <li><a href="{{ path('security_login') }}">Login(logout)</a></li>
        <li><a href="{{ path('signIn') }}">Inscription(logout)</a></li>
        <a class="left" href="{{ path('cart') }}"><img width="30px" src="{{ asset('images/cart.png') }}" alt="caddie"></a>

    </ul>
</header>
<div class="main-content">
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}
    {% block body %}{% endblock %}
</div>
<div class="footer">
    <p>BOUTBOUL Michael --- CANIARD Marie-Lucile ||| S3A1</p>
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>